{
    "compilerOptions": {
        "outDir": "./types/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "declaration": true,
        "typeRoots": [
            "./src/**/*",
            "./types/**/*",
            "./node_modules/@types"
        ],
        "moduleResolution":"Node"
    },
    "include": [
        "./src/**/*", "@types", "./types/**/*"
    ],
}