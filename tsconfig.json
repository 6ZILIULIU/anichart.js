{
    "compilerOptions": {
        "outDir": "./lib/",
        "declarationDir": "./types",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "declaration": true,
        "typeRoots": [
            "./src/**/*",
            "./types/**/*",
            "./node_modules/@types"
        ],
        "moduleResolution":"Node",
        "esModuleInterop": true,
        "allowUmdGlobalAccess": true
    },
    "include": [
        "./src/**/*", "@types", "./types/**/*"
    ],
}